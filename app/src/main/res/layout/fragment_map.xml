<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@drawable/map"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/belkaButton"
                    android:layout_width="72dp"
                    android:layout_height="113dp"
                    android:layout_marginTop="236dp"
                    android:layout_marginEnd="376dp"
                    android:background="#00FFFFFF"

                    android:backgroundTint="#00FFFFFF"
                    app:layout_constraintEnd_toEndOf="@id/imageView7"
                    app:layout_constraintTop_toTopOf="@id/imageView7" />

                <ImageButton
                    android:id="@+id/spruceButton"
                    android:layout_width="33dp"
                    android:layout_height="41dp"
                    android:layout_marginTop="212dp"
                    android:layout_marginEnd="296dp"
                    android:background="#00FFFFFF"
                    android:backgroundTint="#00FFFFFF"
                    android:scaleType="centerCrop"
                    android:src="@drawable/spruce_blue"
                    app:layout_constraintEnd_toEndOf="@id/imageView7"
                    app:layout_constraintTop_toTopOf="@id/imageView7" />

                <ImageButton
                    android:id="@+id/greenSpruceButton"
                    android:layout_width="31dp"
                    android:layout_height="55dp"
                    android:layout_marginTop="236dp"
                    android:layout_marginEnd="320dp"
                    android:background="#00FFFFFF"
                    android:backgroundTint="#00FFFFFF"
                    android:scaleType="centerCrop"
                    android:src="@drawable/spruce_green"
                    app:layout_constraintEnd_toEndOf="@id/imageView7"
                    app:layout_constraintTop_toTopOf="@id/imageView7" />

                <ImageView
                    android:id="@+id/sprucePopup"
                    android:layout_width="220dp"
                    android:layout_height="120dp"
                    android:layout_marginTop="200dp"
                    android:layout_marginEnd="324dp"
                    android:src="@drawable/spruce_popup"
                    android:visibility="invisible"
                    app:layout_constraintEnd_toEndOf="@id/imageView7"
                    app:layout_constraintTop_toTopOf="@id/imageView7" />

                <ImageView
                    android:id="@+id/belkaPopup"
                    android:layout_width="220dp"
                    android:layout_height="120dp"
                    android:layout_marginTop="228dp"
                    android:layout_marginEnd="188dp"
                    android:src="@drawable/squirrel_popup"
                    android:visibility="invisible"
                    app:layout_constraintEnd_toEndOf="@id/imageView7"
                    app:layout_constraintTop_toTopOf="@id/imageView7" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </HorizontalScrollView>
    </androidx.core.widget.NestedScrollView>

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="36dp"
        android:src="@drawable/control_elements"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:fontFamily="@font/open_sans"
        android:text="@string/search_balance"
        android:textColor="@color/yellow"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView23"
        app:layout_constraintEnd_toStartOf="@+id/imageView23"
        app:layout_constraintTop_toTopOf="@+id/imageView23" />

    <ImageView
        android:id="@+id/imageView23"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="15dp"
        android:src="@drawable/search_actionbar_rightimage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>